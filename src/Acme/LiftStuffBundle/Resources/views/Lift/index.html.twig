{% extends '::base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-6">
            <h2>Record new Lifts</h2>

            <form action="{{ path('lift') }}" method="POST" class="form-inline" novalidate="novalidate">
                {{ form_errors(form) }}

                {{ form_row(form.item, {
                    'label': 'What did you lift?',
                    'label_attr': {'class': 'sr-only'}
                }) }}

                {{ form_row(form.reps, {
                    'label': 'How many times?',
                    'label_attr': {'class': 'sr-only'},
                    'attr': {'placeholder': 'How many times?'}
                }) }}

                {{ form_rest(form) }}

                <button type="submit" class="btn btn-primary">I Lifted it!</button>
            </form>

            {% if repLogs is not empty %}
                <h3>What you've been lifting...</h3>

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>What</th>
                            <th>How many times?</th>
                            <th>Weight</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for repLog in repLogs %}
                            <tr>
                                <td>{{ repLog.itemLabel|trans }}</td>
                                <td>{{ repLog.reps }}</td>
                                <td>{{ repLog.totalWeightLifted }}</td>
                            </tr>

                        {% endfor %}
                    </tbody>
                </table>
            {% else %}

                <div class="alert alert-warning" style="margin-top: 20px;">
                    You're looking a little... wimpy.
                    Better lift something!
                </div>

            {% endif %}
        </div>
        <div class="col-md-6">
            <h2>Leaderboard</h2>

            {{ render(controller('AcmeLiftStuffBundle:Lift:leaderboard')) }}
        </div>
    </div>
{% endblock %}