{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-6">
            <h2>
                Record new Lifts
                <a href="#list-stuff-form" class="btn btn-link pull-right">
                    <span class="fa fa-plus"></span> Add
                </a>
            </h2>

            <table class="table table-striped">
                <thead>
                <tr>
                    <th>What</th>
                    <th>How many times?</th>
                    <th>Weight</th>
                    <th>&nbsp;</th>
                </tr>
                </thead>
                <tbody>
                {% for repLog in repLogs %}
                    <tr>
                        <td>{{ repLog.itemLabel|trans }}</td>
                        <td>{{ repLog.reps }}</td>
                        <td>{{ repLog.totalWeightLifted }}</td>
                        <td>
                            &nbsp;
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">Get liftin'!</td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <td>&nbsp;</td>
                        <th>Total</th>
                        <th>{{ totalWeight }}</th>
                    </tr>
                </tfoot>
            </table>

            <form action="{{ path('lift') }}" method="POST" class="form-inline" novalidate="novalidate" id="list-stuff-form">
                {{ form_errors(form) }}

                {{ form_row(form.item, {
                    'label': 'What did you lift?',
                    'label_attr': {'class': 'sr-only'}
                }) }}

                {{ form_row(form.reps, {
                    'label': 'How many times?',
                    'label_attr': {'class': 'sr-only'},
                    'attr': {'placeholder': 'How many times?'}
                }) }}

                {{ form_rest(form) }}

                <button type="submit" class="btn btn-primary">I Lifted it!</button>
            </form>
        </div>
        <div class="col-md-4 col-md-offset-2">
            <h2>Leaderboard</h2>

            {{ include('lift/_leaderboard.html.twig') }}
        </div>
    </div>
{% endblock %}